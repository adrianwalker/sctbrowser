<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/sctbrowser">

  <Resource 
    name="jdbc/sctbrowser" 
    auth="Container"
    type="javax.sql.DataSource" 
    driverClassName="${sql.driver}"
    url="${sql.url}"
    username="${sql.user}" 
    password="${sql.password}"
    initialSize="5"
    maxActive="200"
    maxTotal="200"/>
</Context>
